{
"mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "get-notes-multi-kbs": {
      "command": "npx",
      "args": [
        "-y",
        "get_notebook_mcp_server"
      ],
      "env": {
        "GET_KNOWLEDGE_BASES": "${GET_KNOWLEDGE_BASES}"
      }
    },
    "pubmed-data-server": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-pubmed-llm-server"
      ],
      "env": {
        "ABSTRACT_MODE": "deep",
        "FULLTEXT_MODE": "enabled",
        "PUBMED_API_KEY": "${PUBMED_API_KEY}",
        "PUBMED_EMAIL": "${PUBMED_EMAIL}"
      }
    },
    "mcp-pubmed-llm-server": {
      "command": "npx",
      "args": [
        "mcp-pubmed-llm-server"
      ]
    },
    "metaso": {
      "url": "https://metaso.cn/api/mcp",
      "headers": {
        "Authorization": "Bearer ${METASO_API_KEY}"
      }
    },
    "knows-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "knows-mcp-server"
      ],
      "env": {
        "DEFAULT_DATA_SCOPE": "GUIDE,PAPER,MEETING, PAPER_CN",
        "KNOWS_API_BASE_URL": "${KNOWS_API_BASE_URL}",
        "KNOWS_API_KEY": "${KNOWS_API_KEY}",
        "LOG_LEVEL": "info"
      }
    },
    "Tavily": {
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp@0.1.4"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    },
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time",
        "--local-timezone=Asia/Shanghai"
      ]
    },
    "ollama_web_search_and_fetch": {
      "command": "uvx",
      "args": [
        "python",
        "/Users/qinxiaoqiang/Downloads/ollama_websearch_mcp/web-search-mcp.py"
      ],
      "env": {
        "OLLAMA_API_KEY": "${OLLAMA_API_KEY}"
      }
    },
    "bingcn": {
      "command": "npx",
      "args": [
        "bing-cn-mcp"
      ]
    }
  }   
}